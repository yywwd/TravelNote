<% include ../partials/header %>

<% if(currentUser && currentUser.isAdmin) { %>
    <h1>You're an admin!</h1>
<% } %>
<header class="jumbotron">
    <h1>This is the travel notes page</h1>
    <p>View our hand-picked travel notes from all over the world</p>
    <p>
        <a class="btn btn-primary btn-lg" href="/travelnotes/new">Add New Travel Note</a>
    </p>
</header>

<div class="row text-center" style="display:flex; flex-wrap:wrap;">
    <% travelnotes.forEach(function(travelnote){ %>
        <div class="col-md-3 col-sm-6">
            <div class="thumbnail">
                <img src="<%= travelnote.image %>">
                <div class="caption">
                    <h4><%= travelnote.name%></h4>
                </div>
                <p>
                    <a href="travelnotes/<%= travelnote._id %>" class="btn btn-primary">More Info</a>
                </p>
            </div>
        </div>
    <% }); %>
</div>


<% include ../partials/footer %>